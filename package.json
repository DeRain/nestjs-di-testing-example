{
  "name": "nestjs-testing-demo",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "format": "prettier --write .",
    "lint": "eslint .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "docker-compose up -d && sleep 2 && dotenv -e .env.test.e2e -- jest --selectProjects integration && docker-compose down -v",
    "test:e2e": "jest --selectProjects e2e",
    "e2e:up": "docker-compose up -d",
    "e2e:down": "docker-compose down -v",
    "e2e:prep": "dotenv -e .env.test.e2e -- npx prisma migrate deploy && dotenv -e .env.test.e2e -- npx prisma generate",
    "e2e:run": "dotenv -e .env.test.e2e -- jest --selectProjects e2e",
    "e2e": "npm run e2e:up && sleep 2 && npm run e2e:prep && npm run e2e:run && npm run e2e:down"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.2",
    "ioredis": "^5.4.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "@prisma/client": "^5.20.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prisma": "^5.20.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
